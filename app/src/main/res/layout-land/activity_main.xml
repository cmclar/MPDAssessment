<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/flipView1">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/dataLoader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Loading Data"
            />
        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Continue" />
    </LinearLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <Button
                            android:id="@+id/searchButton"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Search for an incident/roadwork"
                            android:layout_weight="1"
                            />
                        <Button
                            android:id="@+id/incidentButton"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Current incidents"
                            android:layout_weight="1"
                           />
                    </LinearLayout>
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <Button
                            android:id="@+id/roadButton"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Current Roadworks"
                            android:layout_weight="1"
                            />
                        <Button
                            android:id="@+id/planButton"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Planned Roadworks"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text=""
                        />

                    <TextView
                        android:id="@+id/urlInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:text="Current incidents:"
                        android:layout_gravity="center"
                    />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/locationLayout"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Location: "
                            />
                        <TextView
                            android:id="@+id/locInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text=""
                            />
                        <requestFocus />
                    </LinearLayout>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/dateLayout"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Published Date: "
                            />
                        <TextView
                            android:id="@+id/dateInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text=""
                            />
                        <requestFocus />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text=""
                        />

                    <Button
                        android:id="@+id/moreButton"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="More Info"
                        />

                    <Button
                        android:id="@+id/nextButton"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Next incident"
                        />

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Desired Road"/>

        <Button
            android:id="@+id/confirmSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"/>
        </LinearLayout>
    </ScrollView>
</ViewFlipper>
